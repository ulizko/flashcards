<table class="table table-bordered">
  <tbody>
    <% @cards.each do |card| %>
    <tr>
      <td rowspan = '3'>
        <%= image_tag(card.image.thumb.url) %>
      </td>
      <td rowspan = '3'>
        <%= card.original_text %>
      </td>
      <td rowspan = '3'>
        <%= card.translated_text %>
      </td>
      <td rowspan = '3'>
        <%= card.review_date.strftime('%d/%m/%Y') %>
      </td>
      <td>
        <%= link_to t('show'), card_path(card) %>
      </td>
    </tr>
    <tr>
      <td>
        <%= link_to t('edit'), edit_card_path(card) %>
      </td>
    </tr>
    <tr>
      <td>
        <%= link_to t('delete'), card_path(card), method: :delete %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
