<%= simple_form_for @card, :html => {:multipart => true} do |f| %>
  <%= f.input :original_text %>
  <%= f.input :translated_text %>
  <%= f.input :review_date, as: :date if @card.persisted?   %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.file_field :image %><br />
  <%= f.association  :deck, collection: current_user.decks, :label_method => :name, :value_method => :id, :label => t('activerecord.attributes.deck.name') %>

  <%= f.button :submit %>
<% end %>
